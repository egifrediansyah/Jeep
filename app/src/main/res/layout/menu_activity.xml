<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".FragmentIntro.MainActivity"
        android:weightSum="10"
        android:background="@drawable/bg1">
    <!--<android.support.v4.view.ViewPager-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:id="@+id/viewPager"/>-->

    <RelativeLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <ImageView
                android:background="@drawable/logojeep"
                android:layout_centerInParent="true"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
    </RelativeLayout>

    <GridLayout
            android:columnCount="2"
            android:rowCount="4"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="14dp">

        <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:id="@+id/alamat"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardBackgroundColor="@color/cardview_dark_background"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">
            <ImageView
                    android:background="@drawable/alamat"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_width="60dp"
                    android:layout_marginBottom="20dp"
                    android:layout_height="60dp"/>
            <TextView
                    android:layout_gravity="center"
                    android:text="Alamat"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/white"
                    android:layout_marginTop="25dp"
                    android:textStyle="italic|bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardBackgroundColor="@color/cardview_dark_background"
                app:cardElevation="8dp"
                android:id="@+id/spesifikasi"
                app:cardCornerRadius="8dp">
            <ImageView
                    android:background="@drawable/iconenginer"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_width="60dp"
                    android:layout_marginBottom="20dp"
                    android:layout_height="60dp"/>
            <TextView
                    android:layout_gravity="center"
                    android:text="Spesifikasi"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/white"
                    android:layout_marginTop="25dp"
                    android:textStyle="italic|bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/cardview_dark_background"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:id="@+id/harga"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">
            <ImageView
                    android:background="@drawable/iconmoney"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_width="60dp"
                    android:layout_marginBottom="20dp"
                    android:layout_height="60dp"/>
            <TextView
                    android:layout_gravity="center"
                    android:text="Harga"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/white"
                    android:layout_marginTop="25dp"
                    android:textStyle="italic|bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/sejarahjeep"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/cardview_dark_background"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">
            <ImageView
                    android:background="@drawable/iconsejarah"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_width="60dp"
                    android:layout_marginBottom="20dp"
                    android:layout_height="60dp"/>
            <TextView
                    android:layout_gravity="center"
                    android:text="Sejarah Jeep"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/white"
                    android:layout_marginTop="25dp"
                    android:textStyle="italic|bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>


    </GridLayout>
</LinearLayout>